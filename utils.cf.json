{
    "Parameters": {},
    "Resources": {
        "BasicLambdaRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "RoleName": "Cheapseats-BasicLambda",
                "Path": "/cheapseats/",
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
                ]
            }
        },
        "MacroLambda": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Code": "./NetworkInfo",
                "Handler": "NetworkInfo.macro_handler",
                "Runtime": "python3.6",
                "Role": {
                    "Fn::GetAtt": [
                        "BasicLambdaRole",
                        "Arn"
                    ]
                }
            }
        },
        "MacroLogGroup": {
            "Type": "AWS::Logs::LogGroup",
            "Properties": {
                "LogGroupName": "Cheapseats-MacroLogs"
            }
        },
        "MacroDefinition": {
            "Type": "AWS::CloudFormation::Macro",
            "Properties": {
                "Name": "NetworkInfo",
                "Description": "Utility Macro to derive network information from CIDR Range",
                "FunctionName": {
                    "Fn::GetAtt": [
                        "MacroLambda",
                        "Arn"
                    ]
                },
                "LogGroupName": {
                    "Ref": "MacroLogGroup"
                }
            }
        },
        "MacroIAMPolicy": {
            "Type": "AWS::IAM::ManagedPolicy",
            "Properties": {
                "ManagedPolicyName": "Cheapseats-UtilsMacroAccess",
                "Path": "/cheapseats/",
                "Description": "Grants required permissions to use Cheapseats macros",
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Sid": "MacroCFAccess",
                            "Effect": "Allow",
                            "Action": "cloudformation:CreateChangeSet",
                            "Resource": [
                                {
                                    "Fn::Sub": "arn:aws:cloudformation:${AWS::Region}:${AWS::AccountId}:transform/${MacroDefinition}"
                                }
                            ]
                        },
                        {
                            "Sid": "MacroLambdaAccesws",
                            "Effect": "Allow",
                            "Action": "lambda:InvokeFunction",
                            "Resource": [
                                {
                                    "Fn::GetAtt" : [ "MacroLambda", "Arn"]
                                }
                            ]
                        }
                    ]
                }
            }
        }
    },
    "Outputs": {
        "BasicLambda": {
            "Description": "IAM Role for Basic Execution-Only Lambda",
            "Value": {
                "Fn::GetAtt": [
                    "BasicLambdaRole",
                    "Arn"
                ]
            },
            "Export": {
                "Name": "CheapSeats-Roles-BasicLambda"
            }
        }
    }
}